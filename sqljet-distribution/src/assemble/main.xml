<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>sqljet</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>..</directory>
            <includes>
                <include>README.txt</include>
                <include>CHANGES</include>
                <include>COPYING</include>
            </includes>
            <outputDirectory>sqljet-${project.version}.${ci.buildNumber}</outputDirectory>
        </fileSet>
    </fileSets>
    
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.sqljet:sqljet</include>
                <include>org.tmatesoft.sqljet:sqljet-browser</include>
            </includes>
            <binaries>
                <includeDependencies>true</includeDependencies>
                <outputDirectory>sqljet-${project.version}.${ci.buildNumber}</outputDirectory>
                <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${ci.buildNumber}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>sqljet-${project.version}.${ci.buildNumber}</outputDirectory>
                        <unpack>false</unpack>
                        <useProjectArtifact>true</useProjectArtifact>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                        <useProjectAttachments>false</useProjectAttachments>
                        <excludes>
                            <exclude>org.tmatesoft.sqljet:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.sqljet:sqljet</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <attachmentClassifier>javadoc</attachmentClassifier>
                <outputDirectory>sqljet-${project.version}.${ci.buildNumber}</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${ci.buildNumber}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.sqljet:sqljet-example-inventory</include>
                <include>org.tmatesoft.sqljet:sqljet-example-simple</include>
                <include>org.tmatesoft.sqljet:sqljet-example-expenses</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputDirectory>sqljet-${project.version}.${ci.buildNumber}/examples</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${ci.buildNumber}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.sqljet:sqljet-example-inventory</include>
                <include>org.tmatesoft.sqljet:sqljet-example-simple</include>
                <include>org.tmatesoft.sqljet:sqljet-example-expenses</include>
            </includes>
            <binaries>
                <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${ci.buildNumber}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
                <attachmentClassifier>sources</attachmentClassifier>
                <unpack>false</unpack>
                <outputDirectory>sqljet-${project.version}.${ci.buildNumber}/examples</outputDirectory>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.sqljet:sqljet</include>
                <include>org.tmatesoft.sqljet:sqljet-browser</include>
            </includes>
            <binaries>
                <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${ci.buildNumber}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
                <attachmentClassifier>sources</attachmentClassifier>
                <unpack>false</unpack>
                <outputDirectory>sqljet-${project.version}.${ci.buildNumber}</outputDirectory>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>

</assembly>